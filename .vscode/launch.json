    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 3000,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to API Server",
            "address": "127.0.0.1",
            "port": 9229,
            "localRoot": "${workspaceFolder}/server",
            "remoteRoot": "/home/node",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }            
    ]
}